<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Margins -->
    <style name="margin_default">
        <item name="android:layout_margin">@dimen/spacing_default</item>
    </style>

    <!-- Buttons -->
    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height_tall</item>
        <item name="cornerRadius">@dimen/radius_main_button</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:layout_marginStart">@dimen/spacing_big</item>
        <item name="android:layout_marginEnd">@dimen/spacing_big</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_button</item>
    </style>

    <style name="button.blue" parent="button">
        <item name="backgroundTint">@color/blue_1</item>
    </style>

    <style name="button.sea_green" parent="button">
        <item name="backgroundTint">@color/sea_green_3</item>
    </style>

    <style name="button.search" parent="button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/main_5</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:layout_height">@dimen/button_height_thin</item>
    </style>

    <style name="outlined_button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">@dimen/radius_main_button</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:layout_marginStart">@dimen/spacing_big</item>
        <item name="android:layout_marginEnd">@dimen/spacing_big</item>
        <item name="textAllCaps">false</item>
        <item name="strokeWidth">2.5dp</item>
    </style>

    <style name="outlined_button.social_network" parent="outlined_button">
        <item name="strokeColor">@color/blue_1</item>
        <item name="android:layout_height">@dimen/button_height_normal</item>
        <item name="android:textColor">@color/blue_1</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <!-- Texts -->
    <style name="text_title">
        <item name="android:textColor">@color/blue_1</item>
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="text_clickable">
        <item name="android:textColor">@color/blue_1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Text fields -->
    <style name="text_field" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height_extra_tall</item>
        <item name="android:layout_marginStart">@dimen/spacing_big</item>
        <item name="android:layout_marginEnd">@dimen/spacing_big</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="hintEnabled">true</item>
    </style>

    <style name="text_field.credential" parent="text_field">
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_main_button</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_main_button</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_main_button</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_main_button</item>
        <item name="android:strokeColor">@color/sea_green_3</item>
        <item name="boxBackgroundColor">@color/gray_transparent</item>
        <item name="hintTextColor">@color/sea_green_3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="text_field.form" parent="text_field">
        <item name="android:layout_marginTop">@dimen/spacing_default</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <!-- Bottom navigation -->
    <style name="bottom_navigation" parent="Widget.MaterialComponents.BottomNavigationView">

    </style>

    <!-- Labels -->
    <style name="title">
        <item name="android:textColor">@color/main_1</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:layout_margin">@dimen/spacing_default</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="black_title" parent="title">
        <item name="android:textColor">?android:attr/textColor</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="sub_title">
        <item name="android:textColor">@color/main_1</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:layout_marginTop">@dimen/spacing_default</item>
    </style>

    <style name="indicator">
        <item name="android:textColor">@color/main_3</item>
        <item name="fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:layout_marginTop">@dimen/spacing_default</item>
        <item name="android:layout_marginBottom">@dimen/spacing_default</item>
    </style>

    <style name="body">
        <item name="android:textColor">?android:attr/textColor</item>
        <item name="fontFamily">@font/montserrat_light</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
    </style>

    <style name="body_small" parent="body">
        <item name="android:textSize">@dimen/text_size_body_small</item>
    </style>

    <style name="body_medium" parent="body">
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <!-- Switches -->
    <style name="general_switch" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:textColor">@color/main_1</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="largeButtonTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>
</resources>